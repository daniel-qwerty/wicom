    <script type="text/javascript">
    $(function() {
        $('[data-toggle="tooltip"]').tooltip()
    })

    function sendContact() {
        var name = $('#contact-form #name').val();
        var message = $('#contact-form #message').val();
        var email = $('#contact-form #email').val();
        var serial = $('#contact-form #serial').val();
        var resume = $('#contact-form #resume').val();
        var action = $('#contact-form #action').val();


        if (name === "" || email === "" || message === "" || serial === "" || action === "" || resume === "") {
            //swal("", "Los campos marcados con (*) son obligatorios", "warning");
            console.log("Todos los campos del  formulario son obligatorios");
            alert("Todos los campos del  formulario son obligatorios");
        } else {

            $.ajax({
                type: "POST",
                url: "http://wicom.com.bo/Service/Ticket/Save",
                data: {
                    Name: name,
                    Email: email,
                    Serial: serial,
                    Resume: resume,
                    Action: action
                }
            }).done(function(data) {
               
                console.log("Exito");
                alert("Se genero su ticket de soporte exitosamente, en breve nos contactaremos con usted");
                // swal("", "Su mensaje fue enviado con exito", "success");
                $('#contact-form #name').val("");
                $('#contact-form #message').val("");
                $('#contact-form #email').val("");

            }).error(function(error) {
                console.log(error);

            });


        }
    }
    </script>
