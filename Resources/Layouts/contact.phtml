    <script type="text/javascript">
    $(function() {
        $('[data-toggle="tooltip"]').tooltip()
    })

    function sendContact() {
        var name = $('#contact-form #name').val();
        var message = $('#contact-form #message').val();
        var email = $('#contact-form #email').val();


        if (name === "" || email === "" || message === "") {
            //swal("", "Los campos marcados con (*) son obligatorios", "warning");
            console.log("Por favor revise los datos del formulario !!!");
            alert("Todos los campos del  formulario son obligatorios");
        } else {

            $.ajax({
                type: "POST",
                url: "http://wicom.com.bo/Service/Contact/Save",
                data: {
                    Name: name,
                    Email: email,
                    Message: message
                }
            }).done(function(data) {
                console.log("Exito");
                alert("Su mensaje fue enviado con exito");
                // swal("", "Su mensaje fue enviado con exito", "success");
                $('#contact-form #name').val("");
                $('#contact-form #message').val("");
                $('#contact-form #email').val("");

            }).error(function(error) {
                console.log(error);

            });


        }
    }
    </script>
